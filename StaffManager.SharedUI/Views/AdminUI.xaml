<Window x:Class="StaffManager.SharedUI.Views.AdminUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StaffManager.SharedUI.Views" 
        xmlns:classes="clr-namespace:StaffManager.SharedUI.Classes" 
        d:DataContext="{d:DesignInstance Type=classes:UIInstanceManager}"
        mc:Ignorable="d" WindowStyle="None"
        Title="Admin Interface" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Key="L" Modifiers="Alt" Command="{Binding CloseAdminWindowCommand}" />
        <KeyBinding Key="U" Modifiers="Alt" Command="{Binding InitialiseObjectUpdateCommand}" />
        <KeyBinding Key="D" Modifiers="Alt" Command="{Binding InitialiseObjectDeleteCommand}" />
        <KeyBinding Key="Return" Command="{Binding InitialiseObjectAddCommand}" />
    </Window.InputBindings>

    <Border BorderThickness="2" BorderBrush="#0020C2">
        <Grid Background="#F5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.33*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--    Creates the Admin Panels Side Bar   -->
            <Grid Grid.Column="0" Background="#98AFC7">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="Keyboard Shortcuts" FontSize="18" FontWeight="SemiBold"
                       Typography.Capitals="SmallCaps" />

                    <local:AdminShortcuts Margin="0,10,0,0" />
                </StackPanel>
            </Grid>

            <!--    Main Display Area   -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--    Window Title    -->
                <TextBlock Text="Admin Panel" FontSize="18" FontWeight="SemiBold" 
                           Grid.Row="0" Typography.Capitals="SmallCaps" />

                <!--    Main Display Section    -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--    Selected Staff Details Section  -->
                    <StackPanel Orientation="Vertical" Margin="5" Grid.Column="1">
                        <TextBlock Text="Update / Delete" FontSize="14"
                                   FontWeight="SemiBold" />

                        <TextBlock Text="ID Number" FontSize="12" Margin="0,10,0,0" />

                        <!--    ReadOnly text box for Staff ID  -->
                        <TextBox Text="{Binding DataBindings.SelectedObject.Id}"
                                 IsReadOnly="True" Margin="0,5,0,0" />

                        <TextBlock Text="Name" FontSize="12" Margin="0,10,0,0" />

                        <!--    Name Text Box   -->
                        <TextBox Text="{Binding DataBindings.UpdatedObjectName}"
                                 Margin="0,5,0,0" TabIndex="0"
                                 classes:FocusBehavior.IsFocused="{Binding DataBindings.ShouldFocusButton}" />

                        <!--    Update record button    -->
                        <Button Content="Update Record" Margin="0,10,0,0"
                                Padding="5" Cursor="Hand" 
                                Command="{Binding InitialiseObjectUpdateCommand}" />

                        <!--    Delete Record Button    -->
                        <Button Content="Delete Record" Margin="0,10,0,0"
                                Padding="5" Cursor="Hand"
                                Command="{Binding InitialiseObjectDeleteCommand}" />
                    </StackPanel>

                    <!--    Create New Section  -->
                    <StackPanel Orientation="Vertical" Margin="5" Grid.Column="2">
                        <TextBlock Text="Add New Staff" FontSize="14"
                                   FontWeight="SemiBold" />

                        <TextBlock Text="Name" FontSize="12" Margin="0,10,0,0" />

                        <!--    Name Text Box   -->
                        <TextBox Text="{Binding DataBindings.NewObjectName}"
                                 Margin="0,5,0,0" TabIndex="1"
                                 classes:FocusBehavior.IsFocused="{Binding DataBindings.ShouldFocusButton}" />

                        <Button Content="Add Staff Member" Margin="0,10,0,0"
                                Padding="5" Cursor="Hand"
                                Command="{Binding InitialiseObjectAddCommand}" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--    Close Button    -->
                    <Button Content="Close" Command="{Binding CloseAdminWindowCommand}"
                            Grid.Column="2" HorizontalAlignment="Right"/>
                    
                    <!--    Admin Feedback Section  -->
                    <TextBlock Text="Status: " FontSize="12" FontWeight="Bold"
                               Grid.Column="0" VerticalAlignment="Bottom"
                               Margin="0,0,5,0"/>

                    <TextBlock Text="{Binding DataBindings.AdminFeedback}"
                               FontSize="12" Grid.Column="1" 
                               VerticalAlignment="Bottom" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
