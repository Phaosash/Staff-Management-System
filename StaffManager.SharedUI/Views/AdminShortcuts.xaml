<UserControl x:Class="StaffManager.SharedUI.Views.AdminShortcuts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StaffManager.SharedUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--    Left Side Section   -->
        <TextBlock Text="Shortcut" FontSize="12" FontWeight="SemiBold"
                   Grid.Column="0" Grid.Row="0" Padding="5" 
                   Background="#485F77" Foreground="#DFEEF1" />

        <TextBlock Text="Alt + L" FontSize="12" VerticalAlignment="Center"
                   Grid.Column="0" Grid.Row="1" Padding="5" />

        <TextBlock Text="Alt + U" FontSize="12" VerticalAlignment="Center"
                   Grid.Column="0" Grid.Row="2" Padding="5"
                   Background="#D4EBFF" />

        <TextBlock Text="Alt + D" FontSize="12" VerticalAlignment="Center"
                   Grid.Column="0" Grid.Row="3" Padding="5" />

        <TextBlock Text="Alt + A" FontSize="12" VerticalAlignment="Center"
                   Grid.Column="0" Grid.Row="4" Padding="5"
                   Background="#D4EBFF" />

        <TextBlock Text="Tab" FontSize="12" VerticalAlignment="Center"
                   Grid.Column="0" Grid.Row="5" Padding="5" />

        <!--    Right side section      -->
        <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold"
                   Grid.Column="1" Grid.Row="0" Padding="5" TextWrapping="Wrap"
                   Background="#485F77" Foreground="#DFEEF1" />

        <TextBlock Text="Close Admin Interface and save changes" FontSize="12"
                   Grid.Column="1" Grid.Row="1" Padding="5" TextWrapping="Wrap" />

        <TextBlock Text="Update Staff Memeber Record" FontSize="12"
                   Grid.Column="1" Grid.Row="2" Padding="5" TextWrapping="Wrap"
                   Background="#D4EBFF" />

        <TextBlock Text="Delete Staff Record" FontSize="12"
                   Grid.Column="1" Grid.Row="3" Padding="5" TextWrapping="Wrap" />

        <TextBlock Text="Add New Staff Member" FontSize="12"
                   Grid.Column="1" Grid.Row="4" Padding="5" TextWrapping="Wrap"
                   Background="#D4EBFF" />

        <TextBlock Text="Cycle through the input fields" FontSize="12"
                   Grid.Column="1" Grid.Row="5" Padding="5" TextWrapping="Wrap" />
    </Grid>
</UserControl>
