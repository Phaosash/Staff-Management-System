<Window x:Class="SortedDictionaryApp.Views.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortedDictionaryApp.Views"
        xmlns:classes="clr-namespace:StaffManager.Classes;assembly=StaffManager" 
        d:DataContext="{d:DesignInstance Type=classes:SortedDictionaryManager}"
        mc:Ignorable="d"
        Title="AdminPanel" Height="450" Width="800">
    
    <Window.InputBindings>
        <KeyBinding Key="L" Modifiers="Alt" Command="{Binding CloseWindowCommand}" />
    </Window.InputBindings>
    
    <Grid>
        <TextBox Text="{Binding SelectedStaffMemeber.Id}" Margin="10" Height="16" Width="200"/>
        <TextBox Text="{Binding SelectedStaffMemeber.Name}" Margin="500,0,0,0" Height="16" Width="200" />
    </Grid>
</Window>
