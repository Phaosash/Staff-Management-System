<Window x:Class="SortedDictionaryApp.Views.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortedDictionaryApp.Views"
        xmlns:classes="clr-namespace:StaffManager.Classes;assembly=StaffManager" 
        d:DataContext="{d:DesignInstance Type=classes:SortedDictionaryManager}"
        mc:Ignorable="d" Title="Admin Interface" Height="450" Width="800"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    
    <Window.InputBindings>
        <KeyBinding Key="L" Modifiers="Alt" Command="{Binding CloseWindowCommand}" />
    </Window.InputBindings>

    <Border BorderThickness="2" BorderBrush="#4585A4">
        <Grid Background="#F2F2F2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.33*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--    Creates the Admin Panels Side Bar   -->
            <Grid Grid.Column="0" Background="#DFEEF1">
                <local:AdminShortcuts Margin="5" />
            </Grid>
        </Grid>
    </Border>
</Window>
