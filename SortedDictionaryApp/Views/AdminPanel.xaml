<Window x:Class="SortedDictionaryApp.Views.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortedDictionaryApp.Views"
        xmlns:classes="clr-namespace:StaffManager.Classes;assembly=StaffManager" 
        d:DataContext="{d:DesignInstance Type=classes:SortedDictionaryManager}"
        mc:Ignorable="d" Title="Admin Interface" Height="450" Width="800"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    
    <Window.InputBindings>
        <KeyBinding Key="L" Modifiers="Alt" Command="{Binding CloseWindowCommand}" />
    </Window.InputBindings>

    <Border BorderThickness="2" BorderBrush="#4585A4">
        <Grid Background="#F2F2F2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.33*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--    Creates the Admin Panels Side Bar   -->
            <Grid Grid.Column="0" Background="#DFEEF1">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="Keyboard Shortcuts" FontSize="18" FontWeight="SemiBold"
                               Typography.Capitals="SmallCaps" />

                    <local:AdminShortcuts Margin="0,10,0,0" />
                </StackPanel>
            </Grid>

            <!--    Main Display Area   -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--    Window Title    -->
                <TextBlock Text="Admin Panel" FontSize="18" FontWeight="SemiBold" 
                           Grid.Row="0" Typography.Capitals="SmallCaps" />
                
                <!--    Close Button    -->
                <Button Content="Close" Command="{Binding CloseWindowCommand}"
                        Padding="5" Margin="5" Grid.Row="2"
                        HorizontalAlignment="Right"/>

                <!--    Main Display Section    -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />

                    </Grid.ColumnDefinitions>

                    <!--    Selected Staff Details Section  -->
                    <StackPanel Orientation="Vertical" Margin="5" Grid.Column="0">
                        <TextBlock Text="Update / Delete Staff Member" FontSize="14"
                                   FontWeight="SemiBold" />

                        <TextBlock Text="ID Number" FontSize="12" Margin="0,10,0,0" />

                        <!--    ReadOnly text box for Staff ID  -->
                        <TextBox Text="{Binding StaffData.SelectedStaffMember.Id}"
                                 IsReadOnly="True" Margin="0,5,0,0" />

                        <TextBlock Text="Name" FontSize="12" Margin="0,10,0,0" />

                        <!--    Name Text Box   -->
                        <TextBox Text="{Binding StaffData.SelectedStaffMember.Name}"
                                 Margin="0,5,0,0" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
