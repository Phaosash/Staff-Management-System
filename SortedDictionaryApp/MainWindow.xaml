<Window x:Class="SortedDictionaryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortedDictionaryApp"
        xmlns:ctrls="clr-namespace:SortedDictionaryApp.Views" 
        xmlns:classes="clr-namespace:StaffManager.Classes;assembly=StaffManager" 
        d:DataContext="{d:DesignInstance Type=classes:SortedDictionaryManager}"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1360">

    <Window.InputBindings>
        <KeyBinding Key="I" Modifiers="Alt" Command="{Binding ClearIdCommand}" />
        <KeyBinding Key="N" Modifiers="Alt" Command="{Binding ClearNameCommand}" />
        <KeyBinding Key="A" Modifiers="Alt" Command="{Binding OpenNewWindowCommand}" />
        <KeyBinding Key="L" Modifiers="Alt" Command="{Binding CloseApplicationCommand}" />
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.33*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!--    Left side content (Keyboard shortcuts)    -->
        <Grid Grid.Column="0" Background="#DFEEF1">
            <StackPanel Orientation="Vertical" Margin="10">
                <!--    Section Title   -->
                <TextBlock Text="Keyboard Shortcuts" FontSize="18" FontWeight="Bold" />

                <!--    Section Subtitle   -->
                <TextBlock Text="General Shortcuts:" FontSize="14" FontWeight="SemiBold"
                           Margin="0,10,0,0" TextDecorations="Underline" />

                <!--    Table for displaying the shortcuts-->
                <ctrls:GeneralShortcuts Margin="0,10,0,0" />
            </StackPanel>
        </Grid>
        
        <!--    Main Content Area   -->
        <Grid Grid.Column="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--    Second Column   -->
            <Grid Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Staff Contact List" FontSize="18" FontWeight="Bold"
                           Padding="5" Grid.Row="0"  />

                <!--    Read Only List Box  -->
                <ListBox Grid.Row="1" IsEnabled="False" ItemsSource="{Binding MasterFile}" />
            </Grid>

            <!--    Third Column    -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Search / Filter Data" FontSize="18" FontWeight="Bold"
                           Padding="5" Grid.Row="0"  />

                <!--    Search Field    -->
                <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                         Grid.Row="1" KeyboardNavigation.TabIndex="0" />
               
                <!--    ID Fields   -->
                <TextBlock Text="ID Number" Margin="0,20,0,0" Grid.Row="2"
                           FontSize="14" FontWeight="SemiBold" />

                <!--    Staff ID TextBox    -->
                <TextBox Grid.Row="3" Text="{Binding SelectedStaffMemeber.Id, TargetNullValue='', FallbackValue='', UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                         classes:FocusBehavior.IsFocused="{Binding ShouldFocusIdTextBox}"
                         KeyboardNavigation.TabIndex="2" />

                <!--    Name Fields  -->
                <TextBlock Text="Name" Margin="0,20,0,0" Grid.Row="4"
                           FontSize="14" FontWeight="SemiBold" />

                <!--    Staff Name TextBox  -->
                <TextBox Grid.Row="5" Text="{Binding SelectedStaffMemeber.Name, TargetNullValue='', FallbackValue='', UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                         classes:FocusBehavior.IsFocused="{Binding ShouldFocusNameTextBox}"
                         KeyboardNavigation.TabIndex="3" />
            </Grid>

            <!--    Fourth Column Content   -->
            <Grid Grid.Column="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Filtered Contact List" FontSize="18" FontWeight="Bold"
                           Padding="5" Grid.Row="0"  />

                <ListBox ItemsSource="{Binding StaffMembers}" Grid.Row="1"
                         SelectedItem="{Binding SelectedStaffMemeber}"
                         KeyboardNavigation.TabNavigation="Cycle"
                         KeyboardNavigation.TabIndex="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Id}" FontWeight="Bold" Margin="0,0,5,0" />
                                <TextBlock Text=": " />
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
