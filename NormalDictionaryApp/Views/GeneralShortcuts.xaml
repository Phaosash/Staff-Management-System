<UserControl x:Class="NormalDictionaryApp.Views.GeneralShortcuts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NormalDictionaryApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--    Left Side Section   -->
        <TextBlock Text="Shortcut" FontSize="12" FontWeight="SemiBold"
               Grid.Column="0" Grid.Row="0" Padding="5" 
               Background="#A47245" Foreground="#DFEEF1" />

        <TextBlock Text="Alt + I" FontSize="12" VerticalAlignment="Center"
               Grid.Column="0" Grid.Row="1" Padding="5" />

        <TextBlock Text="Alt + N" FontSize="12" VerticalAlignment="Center"
               Grid.Column="0" Grid.Row="2" Padding="5"
               Background="#DACDB8" />

        <TextBlock Text="Alt + A" FontSize="12" VerticalAlignment="Center"
               Grid.Column="0" Grid.Row="3" Padding="5" />

        <TextBlock Text="Tab" FontSize="12" VerticalAlignment="Center"
               Grid.Column="0" Grid.Row="4" Padding="5"
               Background="#DACDB8" />

        <TextBlock Text="Alt + L" FontSize="12" VerticalAlignment="Center"
               Grid.Column="0" Grid.Row="5" Padding="5" />

        <!--    Right side section      -->
        <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold"
               Grid.Column="1" Grid.Row="0" Padding="5" TextWrapping="Wrap"
               Background="#A47245" Foreground="#DFEEF1" />

        <TextBlock Text="Clear Staff ID and focus the Staff ID Textbox." FontSize="12"
               Grid.Column="1" Grid.Row="1" Padding="5" TextWrapping="Wrap" />

        <TextBlock Text="Clear Staff Name filter and focus the Staff Name textbox." FontSize="12"
               Grid.Column="1" Grid.Row="2" Padding="5" TextWrapping="Wrap"
               Background="#DACDB8" />

        <TextBlock Text="Open the Admin Interface." FontSize="12"
               Grid.Column="1" Grid.Row="3" Padding="5" TextWrapping="Wrap" />

        <TextBlock Text="Cycle through input fields and filtered staff list." FontSize="12"
               Grid.Column="1" Grid.Row="4" Padding="5" TextWrapping="Wrap"
               Background="#DACDB8" />

        <TextBlock Text="Close the Window." FontSize="12"
               Grid.Column="1" Grid.Row="5" Padding="5" TextWrapping="Wrap" />
    </Grid>
</UserControl>
